<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.ganainy.ourchat.ui.findUser.UserClickListener" />

        <variable
            name="user"
            type="com.ganainy.ourchat.data.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{()->clickListener.onClick(user)}">

        <!-- Profile Image (Circular) -->
        <FrameLayout
            android:id="@+id/profileContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/userImageView"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:setRoundImage="@{user}"
                tools:src="@color/primaryColor" />
        </FrameLayout>

        <!-- User Info Container -->
        <LinearLayout
            android:id="@+id/userInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/profileContainer"
            app:layout_constraintEnd_toStartOf="@id/arrowIcon"
            app:layout_constraintStart_toEndOf="@id/profileContainer"
            app:layout_constraintTop_toTopOf="@id/profileContainer">

            <!-- Username -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{user.username}"
                android:textColor="@color/slate_900"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Jane Doe" />

            <!-- User Handle/Email -->
            <TextView
                android:id="@+id/userHandleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{user.email}"
                android:textColor="@color/slate_500"
                android:textSize="14sp"
                tools:text="user@example.com" />
        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/slate_400" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
