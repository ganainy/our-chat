<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView for Chat List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/chat_outer_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Empty State Layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:id="@+id/no_chat_layout"
            android:layout_width="match_parent"
            android:background="@color/background_light"
            android:visibility="gone">

            <!-- Empty State Icon -->
            <ImageView
                android:id="@+id/emptyStateIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/no_chat_history_yet"
                app:layout_constraintBottom_toTopOf="@+id/emptyTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_inbox_outline_24dp" />

            <!-- Empty State Title -->
            <TextView
                android:id="@+id/emptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/no_chat_history_yet"
                android:textColor="@color/slate_900"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/emptyMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emptyStateIcon" />

            <!-- Empty State Message -->
            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="@string/click_chat_button_to_start_chatting"
                android:textColor="@color/slate_600"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emptyTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/start_chat_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/find_friends"
            app:backgroundTint="@color/primaryColor"
            app:tint="@color/white"
            app:fabSize="normal"
            app:shapeAppearanceOverlay="@style/FabRoundedCorners"
            app:srcCompat="@drawable/ic_edit_black_24dp" />

        <!-- Loading Indicator -->
        <ImageView
            android:id="@+id/loadingChatImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/loading_animation" />

    </FrameLayout>
